#!/bin/bash


_python_() {
    python3${pVer%.*} -c "$1"
}

RIZOELX_() {
    $(_python_ 'from git import Repo
import sys

UPSTR = "https://github.com/MrRizoel/XSpam"
_BRANCH_ = "main"

repo = Repo.init()
origin = repo.create_remote("temponame", UPSTR)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_riz_repo () {
    local rixrepo
    rixrepo=`echo "aHR0cHM6Ly9naXRodWIuY29tL01yUml6b2VsL1hTcGFt" | base64 -d`
    echo "$rlink"
}

_riz_zip () {
    echo "aHR0cHM6Ly9naXRodWIuY29tL01yUml6b2VsL1hTcGFtL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
}

RIZOELX_PLUG() {
    local rixrepo=$(_riz_repo)
    $(_python_ 'from git import Repo
import sys
UPSTR = "'$rixrepo'"
_BRANCH_ = "master"
repo = Repo.init()
origin = repo.create_remote("temponame", UPSTR)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_starter () {
    local rizpath
    rizpath="rizoelxspam.zip"
    echo "••• Downloading RiZoeL x Spam •••"
    wget -q $(_riz_zip) -O "$rizpath"
    RIZPATH=$(zipinfo -1 "$rizpath" | grep -v "/.");
    unzip -qq "$rizpath"
    rm -rf "$rizpath"
    # RIZOELX_
    cd $RIZPATH
    # RIZOELX_PLUG
    python3 ../setup/updater.py ../requirements.txt requirements.txt
    echo "••• STARTING RiZoeL X Spam •••"
    python3 -m RiZoeLXSpam
}

_starter
